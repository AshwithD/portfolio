# Copy this file to `.env` and fill values. Do NOT commit the real `.env` to git.

# Secret key for Django
DJANGO_SECRET_KEY=replace-this-with-a-secure-random-string

# DEBUG (True for local dev, False in production)
DJANGO_DEBUG=True

# Comma-separated hosts allowed
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: database URL for production (Postgres). Leave commented for local sqlite.
# DATABASE_URL=postgres://user:password@hostname:5432/dbname
